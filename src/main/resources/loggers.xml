<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <bean id="consoleEventLogger"
          class="com.epam.spring.logger.ConsoleEventLogger"/>

    <bean id="fileEventLogger"
          class="com.epam.spring.logger.FileEventLogger"
          init-method="init">
        <constructor-arg value="target/events_log.txt" />
    </bean>

    <bean id="cacheFileLogger"
          class="com.epam.spring.logger.CacheFileEventLogger"
          destroy-method="destroy"
          parent="fileEventLogger">
        <constructor-arg index="1" value="5" />
    </bean>

    <bean id="combinedEventLogger" class="com.epam.spring.logger.CombinedEventLogger">
        <constructor-arg ref="combinedLoggersList"/>
    </bean>

    <util:list id="combinedLoggersList">
        <ref bean="consoleEventLogger" />
        <ref bean="fileEventLogger" />
    </util:list>

</beans>